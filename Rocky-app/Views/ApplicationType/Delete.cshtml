@model Rocky_app.Models.ApplicationType

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-lg-3">Delete Application type</h2>
        </div>
        <div class="row">
            <div class="col-8 ">
                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeName"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="ApplicationTypeName" class="form-control" type="text" value="@Model.ApplicationTypeName"/>
                    </div>

                </div>
                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="DisplayOrder" class="form-control" value="@Model.DisplayOrder"/>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
