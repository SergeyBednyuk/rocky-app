@using Rocky_app.Utils
@model Rocky_app.Models.ViewModels.DetailsViewModel

<div class="">
    <form method="post">
        <input type="hidden" name="id" asp-for="Product.Id"/>
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning">@((Model.Product.Price).ToString("C"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.Product.ImageUrl" width="100%" class="rounded"/>
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:#c96486">@Model.Product.Category.CategoryName</span>
                                        <span class="badge p-3 border" style="background-color:#4ac6f3">@Model.Product.ApplicationType.ApplicationTypeName</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a class="btn btn-success btn-square form-control btn-lg" asp-controller="Home" asp-action="Index" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExistInCart)
                            {
                                <button class="btn btn-warning form-control btn-lg" asp-controller="Home" asp-action="RemoveFromCart" style="height:50px;">Remove from cart</button>
                            }
                            else
                            {
                                <button type="submit" asp-controller="Home" asp-action="Details" asp-route-id="@Model.Product.Id" class="btn btn-info form-control btn-lg" style="height:50px;">Add to Cart</button>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>