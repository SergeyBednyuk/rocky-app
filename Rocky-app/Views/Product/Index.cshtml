@model IEnumerable<Rocky_app.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary font-weight-light">Product list</h2>
        </div>
        <div class="col-6" style="text-align: right;">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                Create New Product
            </a>
        </div>
        <br/>

        @if (Model.Any())
        {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Product name
                </th>
                <th>
                    Product Price
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="width: 50%">@item.Name</td>
                <td style="width: 30%">@item.Price</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                            Add/Update
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>

            }
            </tbody>
        </table>
        }
        else
        {
        <p>Empty</p>
        }
    </div>
</div>

