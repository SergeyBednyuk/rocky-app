@using Rocky_app.Utils
@model Rocky_app.Models.Product

<form method="post" asp-action="DeleteProduct">
    <input type="hidden" asp-for="Id"/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-lg-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8 ">
                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" type="text" value="@Model.Name"/>
                    </div>

                </div>
                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" value="@Model.Price"/>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                <img src="@WC.ImagePath@Model.ImageUrl" alt="image" width="100%" style="border-radius: 5px; border: 1px solid #bbb;"/>
                }
            </div>
        </div>
    </div>
</form>