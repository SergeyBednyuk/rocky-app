@model IEnumerable<Rocky_app.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary font-weight-light">Category list</h2>
        </div>
        <div class="col-6" style="text-align: right;">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
        <br/>
        
        @if (Model.Any())
        {
            <table class="table table-bordered table-striped" style="width: 100%">
                <thead>
                <tr>
                    <th>
                        Category name
                    </th>
                    <th>
                        Category order
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 50%">@item.CategoryName</td>
                        <td style="width: 30%">@item.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                    
                }
                </tbody>
            </table>
        }
        else
        {
            <p>Empty</p>
        }
    </div>
</div>
