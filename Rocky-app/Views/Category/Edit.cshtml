@model Rocky_app.Models.Category?

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id"/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info p-lg-3">Edit Category</h2>
        </div>
        <div class="row">
            <div class="col-8 ">
                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="CategoryName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryName" class="form-control" type="text" value="@Model.CategoryName"/>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" value="@Model.DisplayOrder"/>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Edit"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
